<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>DCP-Viewer</title>
    <style lang="css">

        .main {
            display: grid;
            grid-auto-columns: 1fr;
            grid-template-rows: auto auto;
            grid-template-columns: 28px 240px 20px 105px 102px 32px 20px 100px;
            padding-top: 85px;
            padding-left: 35px;
        }

		.bg {
/* 			background-image: url('dcp.png');
			background-size: cover; */
			position: relative;
			width: 735px;
			height: 1000px;
		}

		.bg img {
			position: absolute;
			width: 100%;
			height: 100%;
			z-index: -1;
		}

        .column {
            font-size: 11px;
            font-family: Arial, sans-serif;
            margin-bottom: 10px;
        }

        .header {
            padding-top: 42px;
            padding-left: 35px;
        }

        .headerline div {
            display: inline-block;
        }

        .headerline {
            margin-bottom: 8px;
        }
    
        #societa {
            margin-left: 30px;
            width: 200px;
        }

        #struttura {
            margin-left: 30px;
            width: 180px;
        }

        #date {
            margin-left: 20px;
            width: 80px;;
        }

        #numero {
            margin-left: 20px;
        }

        #titoloProg {
            margin-left: 125px;
            width: 380px;
        }

        #durata {
            margin-left: 50px;
        }

        #titoloSer {
            margin-left: 100px;
            width: 440px;
        }

        #puntata {
            margin-left: 70px;
        }

        #titoloOrig {
            margin-left: 100px;
            width: 500px;
        }

        #contratto {
            margin-left: 80px;
            width: 120px;
        }

        #dataContratto {
            margin-left: 40px;
        }

        #line5 {
            margin-top: 18px;
        }

        #uorg {
            margin-left: 50px;
            width: 50px;
        }

        #df {
            margin-left: 35px;
            width: 80px;
        }

        #matr {
            margin-left: 40px;
            width: 70px;
        }

        #regista {
            margin-left: 300px;
        }
    
    </style>
</head>
<body>
    <div class="bg">
        <img src="dcp.png" alt="">
        <div class="header">
            <div class="headerline" id="line0">
                <div id="societa">@Model.Societa</div>
                <div id="struttura">@Model.GetPaperDCPValue(Model.Sede)</div>
                <div id="date">@Model.DataTrasmissione.ToShortDateString()</div>
                <div id="numero"></div>
            </div>
            <div class="headerline" id="line1">
                <div id="titoloProg">@Model.TitoloProgramma</div>
                <div id="durata">@Model.Durata</div>
            </div>
            <div class="headerline" id="line2">
                <div id="titoloSer">@Model.TitoloSerie</div>
                <div id="puntata">@Model.Puntata</div>
            </div>
            <div class="headerline" id="line3">
                <div id="titoloOrig">@Model.TitoloOriginale</div>
            </div>
            <div class="headerline" id="line4">
                <div id="contratto">@Model.NumeroContratto</div>
                <div id="dataContratto">@Model.DataContratto.ToShortDateString()</div>
            </div>
            <div class="headerline" id="line5">
                <div id="uorg">@Model.Uorg</div>
                <div id="df">@Model.DF</div>
                <div id="matr">@Model.Matricola</div>
            </div>
            <div class="headerline" id="line6">
                <div id="regista">@Model.Regista</div>
            </div>
        </div>
        <div class="main">
            @{int i = 1;}
            @foreach (DCP_Tool.DCPLine line in Model.Lines)
            {
                <div class="column">@i</div>
                <div class="column">@line.Titolo</div>
                <div class="column">A</div>
                <div class="column">@line.AutoriString</div>
                <div class="column">@line.Esecutori</div>
                <div class="column">@line.Durata.ToString(@"mm\:ss")</div>
                <div class="column">@Model.GetPaperDCPValue(line.TipoGenerazione)</div>
                <div class="column">@line.Marca @line.SiglaNum</div>

                i++;
            }

        </div>

    </div>
</body>
</html>